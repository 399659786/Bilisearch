{
	"manifest_version": 2,
	"name": "Bilisearch",
	"version": "1.0.0",
	"description": "右键使用bilibili搜索选中文字。", 
	"icons":
	{
		"16": "img/icon.png",
		"48": "img/icon.png",
		"128": "img/icon.png"
	},
	
	"browser_action":
	{
		"default_icon": "img/icon.png",
		"default_title": "Bilisearch",
		"default_popup": "popup.html"
	},

	"permissions":
	[
		"contextMenus",
		"tabs"
	],

	"background":
	{
		"scripts": ["js/background.js"]
	}
}